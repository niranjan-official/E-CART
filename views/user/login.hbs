<section>
  <div class="container">
    <div class="row d-flex justify-content-center mt-5 col-sm-12">
      <div>


        <form action="/login" method="POST">
          <h2 class="text-center">LOGIN</h2>
          <div class="form-group" style="width: 25rem;">
            {{#if loginErr}}
            <p class="error">{{loginErr}}</p>
            {{/if}}
            <label>Email address</label>
            <input type="email" class="form-control" name="Email" aria-describedby="emailHelp"
              placeholder="Enter email">

          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" name="Password" class="form-control" placeholder="Password">
          </div>
          <div class="col">
            <a href="/signup" class="account-color">Create new account ?</a>
          </div>
          <div>
            <button type="submit" class="btn text-light col" style="background-color: darkorchid;">Login</button>
            <div></div>
        </form>


      </div>

    </div>
  </div>
</section>
<style>
  .account-color {
    color: rgb(62, 0, 107);
  }
</style>